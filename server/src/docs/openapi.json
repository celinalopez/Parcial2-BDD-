    "/api/users/me/address": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Agregar una direccion al user autenticado",
        "description": "Utiliza $push para añadir una direccion al array de direcciones del user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "address"
                ],
                "properties": {
                  "address": {
                    "type": "object",
                    "properties": {
                      "street": {
                        "type": "string",
                        "example": "Av. Siempre Viva 742"
                      },
                      "city": {
                        "type": "string",
                        "example": "Springfield"
                      },
                      "country": {
                        "type": "string",
                        "example": "Argentina"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Direccion agregada"
          },
          "401": {
            "description": "No autorizado"
          }
        }
      }
    },
