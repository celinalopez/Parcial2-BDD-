{
  "openapi": "3.0.3",
  "info": {
    "title": "Parcial2-API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "Health"
    },
    {
      "name": "Usuarios"
    },
    {
      "name": "Categorias"
    },
    {
      "name": "Productos"
    },
    {
      "name": "Carrito"
    },
    {
      "name": "Ordenes"
    },
    {
      "name": "Resenas"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Healthcheck",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/usuarios/register": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Registro",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creado"
          },
          "409": {
            "description": "Duplicado"
          }
        }
      }
    },
    "/api/usuarios/login": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Credenciales inválidas"
          }
        }
      }
    },
    "/api/usuarios/me": {
      "get": {
        "tags": ["Usuarios"],
        "summary": "Perfil propio",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "No autorizado"
          }
        }
      }
    },
    "/api/usuarios": {
      "get": {
        "tags": ["Usuarios"],
        "summary": "Listar (admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Admin only"
          }
        }
      }
    },
    "/api/categorias": {
      "get": {
        "tags": ["Categorias"],
        "summary": "Listar categorías",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Categorias"],
        "summary": "Crear categoría",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creada"
          },
          "403": {
            "description": "Admin only"
          }
        }
      }
    },
    "/api/categorias/stats": {
      "get": {
        "tags": ["Categorias"],
        "summary": "Stats productos por categoría (admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Admin only"
          }
        }
      }
    },
    "/api/productos": {
      "get": {
        "tags": ["Productos"],
        "summary": "Listar productos (filtros)",
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "brand",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "minPrice",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "maxPrice",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "category",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Productos"],
        "summary": "Crear producto (admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "category", "price"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "brand": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "stock": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creado"
          },
          "403": {
            "description": "Admin only"
          }
        }
      }
    },
    "/api/productos/{id}/stock": {
      "patch": {
        "tags": ["Productos"],
        "summary": "Modificar stock (admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "delta": {
                    "type": "integer"
                  },
                  "stock": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Admin only"
          }
        }
      }
    },
    "/api/productos/top": {
      "get": {
        "tags": ["Productos"],
        "summary": "Top reseñados / mejor rating",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/carrito/{userId}": {
      "get": {
        "tags": ["Carrito"],
        "summary": "Obtener carrito (owner/admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "No autorizado"
          }
        }
      },
      "delete": {
        "tags": ["Carrito"],
        "summary": "Vaciar carrito (owner/admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/carrito/{userId}/total": {
      "get": {
        "tags": ["Carrito"],
        "summary": "Totales (owner/admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/ordenes": {
      "post": {
        "tags": ["Ordenes"],
        "summary": "Crear desde carrito (owner/admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  },
                  "paymentMethod": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creada"
          }
        }
      },
      "get": {
        "tags": ["Ordenes"],
        "summary": "Listar todas (admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Admin only"
          }
        }
      }
    },
    "/api/ordenes/user/{userId}": {
      "get": {
        "tags": ["Ordenes"],
        "summary": "Listar por usuario (owner/admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/ordenes/{id}/status": {
      "patch": {
        "tags": ["Ordenes"],
        "summary": "Cambiar estado (admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string"
                  }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Admin only"
          }
        }
      }
    },
    "/api/ordenes/stats/summary": {
      "get": {
        "tags": ["Ordenes"],
        "summary": "Stats por estado (admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/resenas": {
      "post": {
        "tags": ["Resenas"],
        "summary": "Crear reseña (solo si compró)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["product", "rating"],
                "properties": {
                  "product": {
                    "type": "string"
                  },
                  "rating": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                  },
                  "comment": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creada"
          },
          "403": {
            "description": "Solo quien compró"
          },
          "409": {
            "description": "Una por usuario-producto"
          }
        }
      }
    },
    "/api/resenas/product/{productId}": {
      "get": {
        "tags": ["Resenas"],
        "summary": "Listar reseñas por producto",
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/resenas/top": {
      "get": {
        "tags": ["Resenas"],
        "summary": "TOP productos por rating & count",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
